
{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "declaration": true,
      "moduleDetection": "force",
      "allowArbitraryExtensions": false,
      "verbatimModuleSyntax": true,
      "resolveJsonModule": true,
      "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }